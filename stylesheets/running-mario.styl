.mario
    width pixel-size
    height pixel-size
    background-color color-red
    box-shadow mario-frame-one
    animation running-mario 2s steps(1) infinite
    margin-left: 0


@keyframes running-mario
    0%
        box-shadow mario-frame-one

    25%
        box-shadow mario-frame-two

    50%
        box-shadow mario-frame-one

    75%
        box-shadow mario-frame-two

    100%
        box-shadow mario-frame-one
